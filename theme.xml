<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<!-- System View (List Categories) -->
<view name="system">

<!-- System BG -->
<image name="staticBackground">
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<tile>false</tile>
<linearSmooth>true</linearSmooth>
<path>./bg-home.png</path>
<zIndex>0</zIndex>
</image>

<!-- System List -->
<carousel name="systemcarousel" extra="true">
  <type>vertical</type>
  <pos>0.074 0.026</pos>
  <size>1 0.77</size>
  <origin>0 0</origin>
  <color>00000000</color>
  <logoScale>1</logoScale>
  <logoSize>0.8 0.8</logoSize>
  <logoPos>0 0</logoPos>
  <fastScrolling>true</fastScrolling>
  <maxLogoCount>6</maxLogoCount>
</carousel>

<!-- System Category Title -->
<image name="logo">
<path>./art/default.svg</path>
<path>./art/${system.theme}.svg</path>
</image>

<!-- System Misc Text (Hide) -->
<text name="logoText"><visible>false</visible><pos>0 -1</pos></text>
<text name="systemInfo"><visible>false</visible><pos>0 -1</pos></text>

</view>

<!-- Category View (List Titles) -->
<view name="detailed, video, basic">

<!-- Category BG -->
<image name="background" extra="true">
<origin>0 0</origin>
<pos>0 0</pos>
<size>1 1</size>
<path>./bg-games.png</path>
<zIndex>2</zIndex>
</image>

<!-- Category List -->
<textlist name="gamelist">
<selectorColor>f7fbf7</selectorColor>
<selectedColor>000000</selectedColor>
<primaryColor>f7fbf7</primaryColor>
<secondaryColor>f7fbf7</secondaryColor>
<fontPath>./BPreplayBold-unhinted.otf</fontPath>
<backgroundCornerSize>1 1</backgroundCornerSize>
<fontSize>.051</fontSize>
<pos>0.00 0.058</pos>
<size>0.8546875 0.8</size>
<alignment>left</alignment>
<horizontalMargin>0.071875</horizontalMargin>
<origin>0 0</origin>
<lineSpacing>1.85</lineSpacing>
<selectorImagePath>./selector.png</selectorImagePath>
<selectorOffsetY>-0.01</selectorOffsetY>
<selectorHeight>0.125</selectorHeight>
<selectorWidth>1</selectorWidth>
</textlist>

<!-- Category Misc (Hide) -->
<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate"><visible>false</visible></text>
<rating name="md_rating"><visible>false</visible></rating>
<image name="md_thumbnail"><visible>false</visible></image>

</view>

<!-- Menu View -->
<view name="menu">

<!-- Menu Title -->
<menuText name="menutitle">
<fontPath>./BPreplayBold-unhinted.otf</fontPath>
<fontSize>0.043</fontSize>
<color>ffffff</color>
</menuText>

<!-- Menu Footer -->
<menuText name="menufooter">
<fontPath>./BPreplayBold-unhinted.otf</fontPath>
<fontSize>0.04</fontSize>
<color>ffffff</color>
</menuText>

<!-- Menu Footer -->
<menuText name="menutext">
<fontPath>./BPreplayBold-unhinted.otf</fontPath>
<fontSize>0.043</fontSize>
<color>ffffff</color>
<selectorColor>ffffff</selectorColor>
<selectorColorEnd>ffffff</selectorColorEnd>
<selectedColor>000000</selectedColor>
<separatorColor>00000000</separatorColor>
</menuText>

<!-- Menu Text Edit -->
<menuTextEdit name="menutextedit">
<inactive>./menu-textinput.png</inactive>
<active>./menu-textinput-active.png</active>
</menuTextEdit>

<!-- Menu Text Small -->
<menuTextSmall name="menutextsmall">
<fontPath>./BPreplayBold-unhinted.otf</fontPath>
<fontSize>0.043</fontSize>
<color>ffffff</color>
</menuTextSmall>

<!-- Menu Backgroundd -->
<menuBackground name="menubg">
<color>000000</color>
</menuBackground>

</view>

<!-- Battery Indicator -->
<view name="screen">
<batteryIndicator name="batteryIndicator">
<pos>0.9 0.0625</pos>
<size>0.05 0.05</size>
<color>f7fbf7</color>
</batteryIndicator>
</view>

<!-- Clock (Hide) -->
<text name="clock">
<pos>0 -1</pos>
</text>

<!-- Hide Prompts Offscreen -->
<view name="menu, system, detailed, video, basic">
<helpsystem name="help">
<pos>0 -1</pos>
</helpsystem>
</view>

</theme>